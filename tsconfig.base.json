{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "paths": {
            "@lib/*": ["lib/*"],
            "@routes/*": ["routes/*"],
            "@constants": ["common/constants"],
            "@enums": ["common/enums"],
            "@types": ["common/types"],
            "@config": ["config"]
        }
    }
}
